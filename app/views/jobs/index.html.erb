<h1>Jobs</h1>

<div id="search">
  <%= render :partial => "layouts/search_form" %>
</div>

<div class="jobs-table">
    <table>
      <thead>
        <tr>
          <th><%= link_to "Company", '/jobs_all/company' %></th>
          <th><%= link_to "Recruiter", '/jobs_all/recruiter' %></th>
          <th><%= link_to "Last contact", '/jobs_all/last_contact' %></th>
          <th><%= link_to "Status", '/jobs_all/status' %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @jobs.each do |job| %>
          <tr  class=<%= set_class(job)  %> >
            <td><%= job.company %></td>
            <td><%= job.recruiter[0..20] unless job.recruiter.blank? %></td>
            <td class="last-contact"><%= job.last_contact.strftime("%m-%d-%Y") %></td>
            <td><%= Status.find(job.status).name %></td>
            <td><%= link_to 'Show', job %></td>
            <td><%= link_to 'Edit', edit_job_path(job) %></td>
            <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
<br>

<%= link_to 'New Job', new_job_path %>
