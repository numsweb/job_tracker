<p id="notice"><%= notice %></p>
<h1> Job </h1>

<div class="jobs-table">
    <table>
      <thead>
      <tr>
        <th>Company</th>
        <th>Recruiter</th>
        <th>Email</th>
        <th>Last Contact</th>
        <th>Phone</th>
        <th>Cell</th>
      </tr>
      </thead>
      <tr>
        <td><%= @job.company %></td>
        <td><%= @job.recruiter %></td>
        <td><%= @job.recruiter_email %></td>
        <td><%= @job.last_contact.strftime("%m-%d-%Y") %></td>
        <td><%= @job.recruiter_phone %></td>
        <td><%= @job.recruiter_cell %></td>


      </tr>
    </table>
</div>
<br/>
<div class="jobs-table">
    <table>
      <thead>
        <tr>
          <th>Website</th>
          <th>Address</th>
          <th>Contact</th>
          <th>Phone</th>
          <th>Position</th>
          <th>Status</th>
        </tr>
      </thead>
      <tr>
        <td><%= @job.company_website %></td>
        <td><%= @job.company_address %></td>
        <td><%= @job.company_contact %></td>
        <td><%= @job.company_phone %></td>
        <td><%= @job.position %></td>
        <td> <%= Status.find(@job.status).name %></td>
        <td></td>
      </tr>
    </table>
</div>
<br/>

<p>
  <strong>Comments:</strong>
  <%= @job.comments %>
</p>


