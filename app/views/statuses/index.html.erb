<h1>Statuses</h1>

<div class="new-link">
  <%= link_to 'New Status', new_status_path, class: "btn btn-primary btn-small" %>
</div>

<div class="jobs-table">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Style</th>
          <th>Link Style</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @statuses.each do |status| %>
          <tr>
            <td><%= status.name %></td>
            <td><%= status.style %></td>
             <td><%= status.link_style %></td>
            <td><%= link_to 'Show', status, :class => "btn btn-primary btn-small" %></td>
            <td><%= link_to 'Edit', edit_status_path(status),:class => "btn btn-primary btn-small"  %></td>
            <td><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary btn-small"  %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

<br>

<div class="new-link">
  <%= link_to 'New Status', new_status_path, class: "btn btn-primary btn-small" %>
</div>

